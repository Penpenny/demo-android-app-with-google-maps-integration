<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Black Text. It is applied on TextView -->
    <style name="BasePrimaryText">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Toggle Button styling for group of button which is selected and deselected just like an
    segmented control on iOs -->
    <style name="toggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/stroke_toggle_button</item>
        <item name="backgroundTint">@color/bg_toggle_button</item>
        <item name="android:textColor">@color/text_toggle_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
